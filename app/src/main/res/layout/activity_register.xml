<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegFullName"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:layout_marginBottom="17dp"
        android:hint="Full name"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toTopOf="@+id/RegEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegUsername"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:layout_marginBottom="21dp"
        android:hint="User name"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toTopOf="@+id/RegFullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/RegEmail"
        android:layout_width="318dp"
        android:layout_height="41dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toTopOf="@+id/RegPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/RegRePassword"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:layout_marginBottom="19dp"
        android:ems="10"
        android:hint="Re-Password"
        android:inputType="textPassword"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toTopOf="@+id/RegSSN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegSSN"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:layout_marginBottom="24dp"
        android:hint="SSN"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toTopOf="@+id/RegCity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegApartment"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="84dp"
        android:hint="Apt No."
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegBuilding"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="84dp"
        android:hint="Building No."
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegCity"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="22dp"
        android:hint="City"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toTopOf="@+id/RegStreet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/RegCountry" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegCountry"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="22dp"
        android:hint="Country"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toTopOf="@+id/RegStreet"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/RegStreet"
        android:layout_width="318dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="144dp"
        android:hint="Street"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/RegPassword"
        android:layout_width="318dp"
        android:layout_height="40dp"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#9E9E9E"
        app:layout_constraintBottom_toTopOf="@+id/RegRePassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/RegTitle"
        android:layout_width="226dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:text="Registeration Form"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#6200ED"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Regsubmitbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>